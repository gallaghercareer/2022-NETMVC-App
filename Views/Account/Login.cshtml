@using FinalProReRe.Models
@model LoginViewModel

<!DOCTYPE html>
<html lang="en" >

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In</title>
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Style.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css.map" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css.map" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />

    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" crossorigin="anonymous"></script>

</head>
<body id="loginbody">
    <div>
        <img id="img" src="~/Content/images/loginimage-jumbo.jpg" />
    </div>

    <div id="heading">

        <a href="/home/employeeindex">Home</a> <a target="_blank" href="https://portfolio-22-jpg.herokuapp.com/login">Contact Me</a> <a target="_blank" href="https://docs.google.com/document/d/1eh-c7nNmuU6CRv5ZS2dTp5LpFqJEkoIwypHCYVvm_4I/edit?usp=sharing">Portfolio</a>
    </div>
    <div style="align-content: center; display:flex; flex-direction:column; align-items:center;">
       
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "justify-content: center; display: flex; flex-direction:column; " }))
        {
            @Html.AntiForgeryToken()

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>

        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        <i style="font-size: 1.1rem;"title="Username=Employee@hiring.com, Password=Employeepass123!" class='fa fa-info-circle'></i>

        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", Value = "Admin@hiring.com" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

    </div>


            <div>
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", value = "Adminpass123!" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                <input id="buttonadd" type="submit" value="Log in" class="btn btn-default" style="width:100%; margin-top:5px;" />
            </div>
        }
    </div>
</body>
</html>



    



@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}
<script>

    console.log("start");
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    });

</script>
